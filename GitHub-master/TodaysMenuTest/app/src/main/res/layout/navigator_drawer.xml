<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="250dp"
android:id="@+id/drawer"
android:layout_height="match_parent"
android:layout_gravity="start"
android:background="@color/light_brown">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/lin_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:src="@drawable/user"/>


        <TextView
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40sp"
            android:text="userName"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30sp"
            android:background="@drawable/btn_shape2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_layout1"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <View
            android:background="#DB9A40"
            android:layout_width="200dp"
            android:layout_height="1dp"/>

        <ListView
            android:id="@+id/lv_menu"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:divider="@null"
            android:dividerHeight="0px"
            android:listSelector="@color/colorOrange"/>


    </LinearLayout>



</RelativeLayout>
</LinearLayout>